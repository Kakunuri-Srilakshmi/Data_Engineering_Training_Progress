  { employee_id: 1, employee_name: "Suresh Reddy", note: "Fixed bugs quickly", scanned_doc: "scan1.pdf" },
  { employee_id: 2, employee_name: "Lakshmi Devi", note: "Handled onboarding smoothly", scanned_doc: "scan2.pdf" },

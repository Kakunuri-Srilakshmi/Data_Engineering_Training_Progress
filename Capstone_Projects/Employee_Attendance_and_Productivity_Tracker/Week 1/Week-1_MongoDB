]);

// Indexes
db.task_feedback.createIndex({ employee_id: 1 });
db.task_feedback.createIndex({ employee_name: 1 });
db.task_feedback.createIndex({ note: "text" });

// Example queries:
db.task_feedback.find({ employee_id: 1 }).pretty();
db.task_feedback.find({ $text: { $search: "onboarding" } }).pretty();
